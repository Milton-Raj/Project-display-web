rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {
    // Allow anyone to read files (for public website images)
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Allow writes to content folder (for admin uploads)
    match /content/{allPaths=**} {
      allow write: if true; // Open for now - you can restrict this later
    }
    
    // Allow writes to projects folder
    match /projects/{allPaths=**} {
      allow write: if true;
    }
  }
}
